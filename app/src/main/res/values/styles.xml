<resources>

    <style name="TitleCategory" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTitleCategory</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:lines">2</item>

    </style>

    <style name="ImageCategory" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="HeaderNavBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:actionBarStyle">@style/HeaderBar</item>
        <item name="actionBarStyle">@style/HeaderBar</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorHeaderBackground</item>
        <item name="background">@color/colorHeaderBackground</item>
    </style>


    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">#ffffff</item>
    </style>

</resources>


